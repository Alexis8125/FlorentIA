        <style>
            html,
            body {
                margin: 0;
                padding: 0;
                height: 100vh;
                width: 100vw;
                overflow: hidden;
                background-color: #fffff0;
            }

            .container {
                @apply flex h-screen bg-[#FFFFF0] w-full;
            }

            .menu {
                @apply w-[300px] h-full;
            }

            .information {
                @apply w-[1500px] flex-col h-full flex items-center justify-center;
            }
            .information > p {
                @apply text-[20px] text-center flex mb-[10px] mt-[40px];
            }

            .information > h1 {
                @apply text-[40px] mt-[40px];
            }

            .achievement-content {
                @apply w-full h-[1%] p-[5%] flex items-center justify-center space-x-[45px] bg-[#FFFFF0];
            }

            .content {
                @apply rounded-full bg-[#ffec1d] h-[30px] w-[100px] text-center;
            }
            .content > p {
                @apply rounded-full text-[11px] text-center;
            }

            .achievement-information {
                @apply w-full p-[1%] flex items-center justify-center bg-[#FFFFF0];
            }
            .achievement-icons {
                @apply flex items-center justify-center space-x-[12px];
            }

            .achievement-icon {
                @apply h-[50px] w-[50px];
            }
            .achievement-text {
                @apply text-center;
            }
            .achievement-link {
                @apply text-[#288b98] underline hover:text-[#288b98];
            }
        </style>
    </body>
    <script>
        document.addEventListener('DOMContentLoaded', () => {
  const codigosPermitidos = ['2025029','2025021','2025020','2024012','2024028','2021016','2024144'];
  const codigoEstudiante = localStorage.getItem('codigoEstudiante');

  // Selecciona todos los wrappers de logro
  const wrappers = document.querySelectorAll('.achievement-wrapper');

  wrappers.forEach(wrapper => {
    // dentro de cada wrapper busca el <p> que diga "Tema A"
    const tema = wrapper.querySelector('p.achievement-text');
    if (tema && tema.textContent.trim() === 'Tema A') {
      // si el cÃ³digo NO estÃ¡ en la lista, lo oculto
      if (!codigosPermitidos.includes(codigoEstudiante)) {
        wrapper.style.display = 'none';
      }
    }
  });
});

    </script>
</html>

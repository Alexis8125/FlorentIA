---
import "../../styles/global.css";
import Menu from "../../components/Menu.astro";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Mi Diario</title>
    </head>
    <body>
        <div class="container">
            <div class="menu">
                <Menu />
            </div>
            <div class="information overflow-y-auto p-8">
                <div class="diary-box">
                    <h2 class="diary-title">üìñ Mi Diario</h2>

                    <!-- Fecha autom√°tica -->
                    <p class="date-text">
                        Fecha: <span id="fecha"></span>
                    </p>

                    <!-- Entrada diaria -->
                    <div class="diary-section">
                        <label class="label"
                            >¬øQu√© aprend√≠ hoy o c√≥mo me sent√≠?</label
                        >
                        <textarea
                            class="textarea"
                            id="aprendizaje"
                            rows="4"
                            placeholder="Escribe aqu√≠..."></textarea>
                    </div>

                    <!-- Dibujo del d√≠a -->
                    <div class="diary-section">
                        <label class="label">Dibujo del d√≠a</label>

                        <div class="file-upload-wrapper">
                            <button
                                type="button"
                                class="custom-file-button"
                                onclick="document.getElementById('dibujo').click()"
                            >
                                üì∑ Elegir Dibujo
                            </button>
                            <input
                                type="file"
                                id="dibujo"
                                accept="image/*"
                                class="file-input-hidden"
                            />
                        </div>

                        <p class="file-note" id="file-name">
                            Puedes subir tu dibujo o usar stickers.
                        </p>
                    </div>

                    <!-- Emoci√≥n del d√≠a -->
                    <div class="diary-section">
                        <label class="label">¬øC√≥mo te sentiste hoy?</label>
                        <select class="select" id="emocion">
                            <option>üòä Feliz</option>
                            <option>ü§î Pensativo</option>
                            <option>üòÆ Sorprendido</option>
                            <option>üò¥ Cansado</option>
                            <option>üò¢ Triste</option>
                        </select>
                        <textarea
                            class="textarea"
                            id="motivo"
                            rows="2"
                            placeholder="¬øPor qu√© te sentiste as√≠? (opcional)"
                        ></textarea>
                    </div>

                    <!-- Mi logro de hoy -->
                    <div class="diary-section">
                        <label class="label">üéØ Mi logro de hoy</label>
                        <input
                            type="text"
                            id="logro"
                            class="input"
                            placeholder="Escribe tu logro o selecciona uno del sistema"
                        />
                    </div>

                    <!-- Mis pensamientos -->
                    <div class="diary-section">
                        <label class="label">üß† Mis pensamientos</label>
                        <textarea
                            class="textarea"
                            id="pensamientos"
                            rows="4"
                            placeholder="Escribe lo que quieras..."></textarea>
                    </div>

                    <!-- Bot√≥n de guardar -->
                    <div class="diary-footer">
                        <button type="button" class="boton-guardar" onclick="saveDiaryEntry()">Guardar mi entrada</button>

                    </div>

                    <!-- Volver a leer -->
                    <div class="diary-footer mt">
                        <a href="/Diary" class="link-entradas">
                            üìö Ver entradas anteriores
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script type="module" src="/src/scripts/firebaseConfig.js"></script>
    <script type="module" src="/src/scripts/saveNote.js"></script>
    

    <script>
        const fecha = new Date();

        // 1) D√≠a num√©rico
        const day = fecha.getDate();

        // 2) Nombre de mes largo (usa toLocaleString con s√≥lo { month })
        const monthName = fecha.toLocaleString("es-ES", { month: "long" });

        // 3) A√±o num√©rico
        const year = fecha.getFullYear();

        // Montamos el texto ‚Äú27 de abril de 2025‚Äù
        const texto = `${day} de ${monthName} de ${year}`;

        const span = document.getElementById("fecha");
        if (span) span.textContent = texto;
    </script>
    

    <style>
        html,
        body {
            margin: 0;
            padding: 0;
            height: 100vh;
            width: 100vw;
            background-color: #fffff0;
        }

        .container {
            display: flex;
            height: 100vh;
            width: 100%;
            background-color: #fffff0;
        }

        .menu {
            width: 300px;
            height: 100%;
        }

        .information {
            flex: 1;
            height: 100%;
            display: flex;
            justify-content: center;
            overflow-y: auto; /* s√≥lo scroll vertical si es necesario */
            padding: 20px;
            box-sizing: border-box;
        }

        .diary-box {
            width: 100%;
            max-width: 56rem;
            background-color: #fffff0;
            padding: 32px;
            border-radius: 16px;
            /* box-shadow:
                0 20px 25px -5px rgba(0, 0, 0, 0.1),
                0 10px 10px -5px rgba(0, 0, 0, 0.04); */
        }

        .diary-title {
            font-size: 1.875rem;
            font-weight: bold;
            margin-bottom: 1.5rem;
            text-align: center;
        }

        .date-text {
            text-align: right;
            font-size: 0.875rem;
            color: #6b7280;
            margin-bottom: 1rem;
        }

        .label {
            display: block;
            font-size: 1.125rem;
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .textarea,
        .input,
        .select {
            width: 100%;
            padding: 1rem;
            border-radius: 0.5rem;
            border: 1px solid #d1d5db;
            outline: none;
            overflow-wrap: break-word; /* Prevents text overflow */
            word-wrap: break-word; /* Ensures text wrapping */
        }

        .textarea:focus {
            border-color: #60a5fa;
            box-shadow: 0 0 0 3px rgba(96, 165, 250, 0.5);
        }

        .input {
            padding: 0.75rem;
        }

        .select {
            margin-bottom: 0.5rem;
        }

        .file-input {
            display: block;
            width: 100%;
            font-size: 0.875rem;
            color: #6b7280;
        }

        .file-note {
            font-size: 0.875rem;
            color: #6b7280;
            margin-top: 0.5rem;
        }

        .boton-guardar {
            background-color: #3b82f6;
            color: white;
            font-weight: bold;
            padding: 0.5rem 1.5rem;
            border-radius: 0.75rem;
            cursor: pointer;
        }

        .boton-guardar:hover {
            background-color: #2563eb;
        }

        .link-entradas {
            color: #2563eb;
            text-decoration: none;
        }

        .link-entradas:hover {
            text-decoration: underline;
        }

        .diary-section {
            margin-bottom: 1.5rem;
        }

        .diary-footer {
            text-align: center;
        }

        .diary-footer.mt {
            margin-top: 1.5rem;
            text-align: center;
        }
        .file-upload-wrapper {
            display: flex;
            justify-content: center;
            margin-bottom: 1rem;
            position: relative;
        }

        .custom-file-button {
            background-color: #60a5fa;
            color: white;
            font-weight: 600;
            padding: 0.75rem 1.5rem;
            border: none;
            border-radius: 0.75rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            font-size: 1rem;
        }

        .custom-file-button:hover {
            background-color: #2563eb;
        }

        .file-input-hidden {
            display: none;
        }
    </style>
    
</html>
